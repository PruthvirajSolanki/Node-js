<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BookMyShow</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    body {
      background: linear-gradient(180deg, #0b0b0d 0%, #1c1c20 100%);
      font-family: "Poppins", sans-serif;
      color: #fff;
      overflow-x: hidden;
    }

    /* ---------- NAVBAR ---------- */
    .navbar {
      background: rgba(30, 30, 35, 0.6);
      backdrop-filter: blur(12px);
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      padding: 0.8rem 1.5rem;
    }

    .navbar-brand {
      font-size: 1.7rem;
      font-weight: 700;
      color: #ff0055 !important;
      letter-spacing: 0.8px;
    }

    .nav-link {
      color: #fff !important;
      margin-right: 1.2rem;
      font-weight: 500;
      transition: color 0.3s;
    }

    .nav-link:hover {
      color: #ff0055 !important;
    }

    .search-box input {
      border-radius: 25px;
      border: none;
      padding: 8px 15px;
    }

    .btn-search {
      background: #ff0055;
      color: #fff;
      border-radius: 25px;
      border: none;
      font-weight: 500;
      padding: 8px 15px;
    }

    .btn-search:hover {
      background: #ff3366;
    }

    /* ---------- SLIDER ---------- */
    .slider-img {
      height: 420px;
      object-fit: cover;
      filter: brightness(0.85);
    }

    /* ---------- SECTION HEADER ---------- */
    .header {
      text-align: center;
      margin-top: 40px;
      margin-bottom: 20px;
    }

    .header h1 {
      font-weight: 700;
      color: #ff0055;
      font-size: 2.2rem;
      letter-spacing: 1px;
    }

    /* ---------- MOVIE GRID ---------- */
    .movie-card-container {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 30px;
      padding: 40px 60px;
    }

    .movie-card {
      position: relative;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 18px;
      overflow: hidden;
      transition: transform 0.4s, box-shadow 0.4s;
      box-shadow: 0 0 12px rgba(255, 0, 85, 0.05);
    }

    .movie-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 10px 30px rgba(255, 0, 85, 0.2);
    }

    .movie-poster-wrapper {
      height: 350px;
      overflow: hidden;
    }

    .movie-poster {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.4s ease;
    }

    .movie-card:hover .movie-poster {
      transform: scale(1.08);
    }

    .movie-rating {
      position: absolute;
      top: 15px;
      right: 15px;
      background: rgba(0, 0, 0, 0.7);
      padding: 6px 12px;
      border-radius: 10px;
      color: #ffd700;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 5px;
      font-size: 0.9rem;
    }

    .movie-info {
      padding: 18px 20px;
    }

    .movie-title {
      font-size: 1.3rem;
      font-weight: 600;
      color: #fff;
      margin-bottom: 8px;
    }

    .movie-meta {
      display: flex;
      flex-wrap: wrap;
      gap: 6px;
      font-size: 0.9rem;
      color: #ccc;
    }

    .meta-item {
      background: rgba(255, 255, 255, 0.05);
      padding: 6px 10px;
      border-radius: 8px;
    }

    .movie-age {
      display: inline-block;
      background: #ff0055;
      color: #fff;
      font-size: 0.85rem;
      padding: 5px 10px;
      border-radius: 12px;
      font-weight: 500;
      margin-top: 10px;
    }

    /* ---------- ACTION BUTTONS ---------- */
    .movie-actions {
      display: flex;
      justify-content: space-between;
      padding: 15px 20px 20px;
      gap: 10px;
    }

    .btn-action {
      flex: 1;
      border: none;
      border-radius: 10px;
      padding: 10px 12px;
      color: #fff;
      font-weight: 600;
      transition: 0.3s;
      font-size: 0.9rem;
    }

    .btn-edit { background: #ffb400; }
    .btn-delete { background: #ff4444; }
    .btn-view { background: #28c76f; }

    .btn-edit:hover { background: #ffcc33; }
    .btn-delete:hover { background: #ff6666; }
    .btn-view:hover { background: #32d47b; }

    /* ---------- FOOTER ---------- */
    .footer {
      text-align: center;
      background: rgba(255, 255, 255, 0.05);
      padding: 20px;
      color: #ccc;
      font-size: 0.9rem;
      margin-top: 50px;
    }

    .footer span {
      color: #ff0055;
    }
  </style>
</head>
<body>

  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-lg fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"><i class="fas fa-film me-2"></i>BookMyShow</a>
      <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/add_movie">Add Movie</a></li>
        </ul>

        <form class="d-flex search-box" method="GET">
          <input class="form-control me-2" type="search" name="q" placeholder="Search Movies..." value="<%= searchQuery %>">
          <button class="btn btn-search"><i class="fas fa-search"></i></button>
        </form>
      </div>
    </div>
  </nav>

  <!-- SLIDER -->
  <div id="carouselExampleIndicators" class="carousel slide mt-5" data-bs-ride="carousel" data-bs-interval="3000">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="https://assets-in.bmscdn.com/promotions/cms/creatives/1758520057275_22ndseppostmalonedesktop.jpg" class="d-block w-100 slider-img" alt="Banner 1">
      </div>
      <div class="carousel-item">
        <img src="https://assets-in.bmscdn.com/promotions/cms/creatives/1757148047631_6thsepplaycardsep25hpptmdesktop.jpg" class="d-block w-100 slider-img" alt="Banner 2">
      </div>
      <div class="carousel-item">
        <img src="https://assets-in.bmscdn.com/promotions/cms/creatives/1759294586758_2ndoctweaponsdesktop.jpg" class="d-block w-100 slider-img" alt="Banner 3">
      </div>
    </div>
  </div>

  <!-- MOVIES SECTION -->
  <div class="header">
    <h1>Now Showing</h1>
  </div>

  <div class="movie-card-container">
    <% movies.forEach((movie) => { %>
      <div class="movie-card">
        <div class="movie-poster-wrapper">
          <img src="<%= movie.image %>" alt="<%= movie.name %>" class="movie-poster">
          <div class="movie-rating"><i class="fas fa-star"></i> <%= movie.rating %>/10</div>
        </div>

        <div class="movie-info">
          <h5 class="movie-title"><%= movie.name %></h5>
          <div class="movie-meta">
            <div class="meta-item">Status: <%= movie.status %></div>
            <div class="meta-item">Lang: <%= movie.language %></div>
            <div class="meta-item">Cat: <%= movie.category %></div>
          </div>
          <span class="movie-age">Age: <%= movie.ageValidation %></span>
        </div>

        <div class="movie-actions">
          <a href="/edit-movie/<%= movie._id %>" class="btn-action btn-edit"><i class="fas fa-edit"></i> Edit</a>
          <a href="/delete-movie/<%= movie._id %>" class="btn-action btn-delete"><i class="fas fa-trash"></i> Delete</a>
          <a href="/view-movie/<%= movie._id %>" class="btn-action btn-view"><i class="fas fa-eye"></i> View</a>
        </div>
      </div>
    <% }) %>
  </div>

  <!-- FOOTER -->
  <div class="footer">
    © 2025 <span>BookMyShow</span> — All rights reserved.
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
